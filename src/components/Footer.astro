---
interface FooterLink {
  label: string;
  url: string;
}

interface Props {
  siteName: string;
  footerLinks?: FooterLink[];
}

const { siteName, footerLinks = [] } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-neutral-900 text-neutral-300 mt-16">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h3 class="text-white font-heading font-bold text-xl mb-4">{siteName}</h3>
        <p class="text-sm text-neutral-400">
          Professional services you can trust.
        </p>
      </div>

      <!-- Quick Links -->
      {footerLinks.length > 0 && (
        <div>
          <h4 class="text-white font-heading font-semibold mb-4">Quick Links</h4>
          <ul class="space-y-2">
            {footerLinks.map((link) => (
              <li>
                <a
                  href={link.url}
                  class="text-sm hover:text-white transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}

      <!-- Contact (placeholder) -->
      <div>
        <h4 class="text-white font-heading font-semibold mb-4">Contact</h4>
        <p class="text-sm text-neutral-400">
          Get in touch with us for more information.
        </p>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-neutral-800 mt-8 pt-8 text-center text-sm text-neutral-500">
      <p>&copy; {currentYear} {siteName}. All rights reserved.</p>
    </div>
  </div>
</footer>
